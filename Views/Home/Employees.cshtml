@model Employee

<!DOCTYPE html>
<html>
<head>
    <title></title>
    <style>
        .input-validation-error{
            border:1px solid darkred;
            background-color: #ffcccb;
        }
        .validation-summary-errors{
            color:red;
            font-weight:bolder;
        }


        .flex-grow-1 {
            display: flex;
            flex-direction: column;
            padding-left: 0;
            margin-bottom: 0;
            list-style: none;
            justify-content: space-evenly;
        }


        .btn-success{
            margin-top:10px;    
        }
    </style>
</head>
<body>

    <form asp-action="Employees" method="post">
    <h1> Hello From Employees view </h1>


        <div asp-validation-summary="All"></div>
        <div class="form-label">
            <label asp-for="EmployeeName"> Employees Name</label>
            <input asp-for="EmployeeName" class="form-control form-control-sm" placeholder="Enter your full name.." />
        </div>

        <div class="form-group">
            <label asp-for="Department"> Department</label>
            <select asp-for="Department" class="form-control form-control-sm">
                <option></option>
                <option value="Operation"> Operation</option>
                <option value="IT">Information Teck</option>
                <option value="finance">Finance</option>
            </select>
        </div>

        <div class="form-check form-check-inline">
            <label class="form-check-label" asp-for="isActive"> is Active</label>
            <input class="form-check-input" type="checkbox" asp-for="isActive" />
        </div>

        <div class="form-group">
            <label asp-for="JobTitle">Job Title</label>
            <input asp-for="JobTitle" class="form-control form-control-sm" />
        </div>

        <div class="form-group">
            <label asp-for="BirthDate"> Birth Date</label>
            <input type="date" asp-for="BirthDate" class="form-control form-control-sm" />
        </div>

        <div class="form-group">
            <label asp-for="EmailAddress"> Email Address</label>
            <input type="email" asp-for="EmailAddress" class="form-control form-control-sm" />
        </div>

        <button class="btn btn-success" type="submit">Save</button>
    </form>
</body>
</html>


